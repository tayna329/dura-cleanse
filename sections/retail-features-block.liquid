<div id="section-{{ section.id }}" class="section section-retail-feature-block">
    <div class="{% if section.settings.container == 'fullwidth' %}container-full{% elsif section.settings.container == '1170' %}container-1170{% elsif section.settings.container == '1470' %}container-1470{% elsif section.settings.container == '1770' %}container-1770{% else %}container{% endif %}">
        <style>
            #section-{{ section.id }} .halo-row {
                align-items: start;
            }

            #section-{{ section.id }} .block-heading {
                color: {{ section.settings.heading_color }};
                font-family: Gotham-Medium;
                font-size: 36px;
                font-weight: 500;
                line-height: 43.2px;
                text-align: center;
            }

            #section-{{ section.id }} .feature-heading {
                color: {{ section.settings.heading_color }};
                font-family: Gotham-Medium;
                font-size: 24px;
                font-weight: 500;
                line-height: 28.8px;
                padding: 15px 0px;
            }

            #section-{{ section.id }} .feature-description {
                color: #494848;
                font-family: MadaniArabic-Regular;
                font-size: 18px;
                font-weight: 400;
                line-height: 28px;
                text-align: center;
            } 
        </style>
        <div style="display: block; text-align: center;">
            <h2 class="block-heading">
                {{ section.settings.heading }}           
            </h2>
            <span class="halo-block-title-gradient-border"></span>
        </div>
        
        
        {%-for block in section.blocks -%}
            {% case block.type %}
                {% when '3_items' %}
                    <div class="halo-row column-3 sm-column-2 md-column-3">
                        {%for i in (1..3) %}
                            {%  assign icon_key = "icon_" |  append: i %}
                            {%  assign heading_key = "heading_" |  append: i %}
                            {%  assign description_key = "description_" |  append: i %}
                            <div class="halo-item scroll-trigger animate--slide-in" style="--animation-order: {{ i }}; --items-grid-gap-style: 50px;display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;">
                                <div class="badge-item" style="display: flex; justify-content: center; align-items: center; border-radius: 50%; width:{{ block.settings.badge_size }}px; height:{{ block.settings.badge_size }}px; background: {{ block.settings.badge_color }}">
                                    {% case block.settings[icon_key] %}
                                        {% when 'icon_rating' %}
                                            {% render 'icon-rating', color: block.settings.icon_color, size: block.settings.icon_size %}
                                        {% when 'icon_awards' %}
                                            {% render 'icon-awards', color: block.settings.icon_color, size: block.settings.icon_size %}
                                        {% when 'icon_notice_board' %}
                                            {% render 'icon-notice-board', color: block.settings.icon_color, size: block.settings.icon_size %}
                                        {% when 'icon_bulb' %}
                                            {% render 'icon-bulb', color: block.settings.icon_color, size: block.settings.icon_size %}
                                        {% when 'icon_note' %}
                                            {% render 'icon-note', color: block.settings.icon_color, size: block.settings.icon_size %}
                                    {% endcase %}
                                </div>
                                <div class="feature-heading">
                                    {{ block.settings[heading_key] }}
                                </div>
                                <div class="feature-description">{{ block.settings[description_key] }}</div>
                            </div>
                        {% endfor %}
                    </div>
                {% when '2_items' %}
                    <div class="halo-row column-2 sm-column-2 md-column-2" style="align-items: start;">
                        {%for i in (1..2) %}
                            {%  assign icon_key = "icon_" |  append: i %}
                            {%  assign heading_key = "heading_" |  append: i %}
                            {%  assign description_key = "description_" |  append: i %}
                            <div class="halo-item scroll-trigger animate--slide-in" style="--animation-order: {{ i }}; --items-grid-gap-style: 50px;display: flex; flex-direction: column; justify-content: left; align-items: center;">
                                <div class="badge-item" style="display: flex; justify-content: center; align-items: center; border-radius: 50%; width:{{ block.settings.badge_size }}px; height:{{ block.settings.badge_size }}px; background: {{ block.settings.badge_color }}">
                                    {% case block.settings[icon_key] %}
                                        {% when 'icon_rating' %}
                                            {% render 'icon-rating', color: block.settings.icon_color, size: block.settings.icon_size %}
                                        {% when 'icon_awards' %}
                                            {% render 'icon-awards', color: block.settings.icon_color, size: block.settings.icon_size %}
                                        {% when 'icon_notice_board' %}
                                            {% render 'icon-notice-board', color: block.settings.icon_color, size: block.settings.icon_size %}
                                        {% when 'icon_bulb' %}
                                            {% render 'icon-bulb', color: block.settings.icon_color, size: block.settings.icon_size %}
                                        {% when 'icon_note' %}
                                            {% render 'icon-note', color: block.settings.icon_color, size: block.settings.icon_size %}
                                    {% endcase %}
                                </div>
                                <div class="feature-heading">
                                    {{ block.settings[heading_key] }}
                                </div>
                                <div class="feature-description">{{ block.settings[description_key] }}</div>
                            </div>
                        {% endfor %}
                    </div>
            {% endcase %}
        {%-endfor -%}
    </div>
</div>
